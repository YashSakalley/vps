<!DOCTYPE html>
<html>

<head>
  <title>SIH</title>
  <meta name="viewport" content="width = device-width initial-scale = 1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link type="text/css" rel="stylesheet" href="/stylesheets/style.css">
  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

  <style type="text/css">
    body {
      margin: 0px;
      padding: 0px;
      background: url("/images/test/back12.jpg");
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
      background-color: #464646;
    }

    .form-row>.col,
    .form-row>[class*=col-] {
      padding-right: 27px;
      padding-left: 5px;
    }

    .p-5 {
      padding: 1rem !important;
    }

    .card {
      margin-top: 10px;
    }
    
  </style>
</head>

<body>
  <nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="#">VIRTUAL POLICE STATION</a>
  </nav>
  <div class="d-md-flex h-md-100">
    <div class="col-md-6 p-0 bg-indigo h-md-100" style="height: 630px;">
      <% if (video_msg == 0) { %>
      <video class="msg" style="height: 110%; width: 100%; min-height: 100%;" autoplay>
        <source src="images/animation_1.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <%} %>
      <% if (video_msg == 2) { %>
      <video class="msg" style="height: 110%; width: 100%; min-height: 100%;" autoplay>
        <source src="images/wrong_1.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <%} %>
      <% if (video_msg == 3) { %>
      <video class="msg" style="height: 110%; width: 100%; min-height: 100%;" autoplay>
        <source src="images/otp_1.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <%} %>
      <% if (video_msg == 4) { %>
      <video class="msg" style="height: 110%; width: 100%; min-height: 100%;" autoplay>
        <source src="images/wrong_otp_1.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <%} %>
    </div>
    <div class="col-md-6 p-0 bg-transparent h-md-100 loginarea">
      <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
        <div class="container">
          <form class="card" style="padding: 2rem;" method="POST">
            <div class="form-row">
              <div class="form-group col-md-6">
                <br>
                <div class="form-field">
                  <input name="aadhaar" type="text" class="form-control" required autocomplete="off" autofocus>
                  <label for="inputEmail4">Enter Aadhaar no.</label>
                </div>
              </div>
              <div class="form-group col-md-6">
                <br>
                <button type="submit" class="btn btn-primary btn-lg">GENERATE OTP</button>
              </div>
            </div>
          </form>

          <!-- Login Form Starts -->

          <form class="card box" style="padding: 2rem;" method="POST" action="/verify">
            <div class="form-row">
              <div class="form-group col-md-6">
                <br>
                <div class="form-field">
                  <input name="aadhaar" type="text" class="form-control" value="<%=aadhaar %>" placeholder="AADHAAR"
                    required readonly autocomplete="off">
                  <!-- <label class="move_up" for="inputEmail4">AADHAAR</label> -->
                </div>
                <br><br>
                <div class="form-field">
                  <input name="code" type="text" class="form-control" required autocomplete="off">
                  <label class="move_up" for="inputEmail4">OTP</label>
                </div>


              </div>
              <div class="col-md-6 form-group" style="border: 2px solid grey; padding: 10px;">
                <label for="inputEmail4">RESPONSE</label>
                <% if (valid == 1) { %>
                <div style="color: green; padding: 0px;"><%=msg %></div>
                <%} else { %>
                <div style="color: red;"><%=msg %></div>
                <% } %>
              </div>
              <div class="form-group col-md-6">
                <!-- <label for="inputPassword4">SUBMIT</label><br> -->
                <br>
                <button type="submit" class="btn btn-primary btn-lg">SUBMIT</button>
              </div>
            </div>
        </div>
        </form>
        <!-- Login Form Ends -->

      </div>
    </div>
  </div>
  </div>
  <script>
    $(document).ready(function () {
      $(".msg").show();
    });
  </script>
</body>

</html>